{
	"include": ["src"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"lib": ["dom", "es2015", "es2016"],
		"jsx": "react",
		"target": "es2016",
		"module": "es2020",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"strictNullChecks": false,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"skipLibCheck": true,
		"allowJs": false,
		"checkJs": false,
		"baseUrl": "./src",
		"paths": {
			"environments": ["../environments/index.tsx"],
			"routes/*": ["./app/routes/*"],
			"layouts/*": ["./app/layouts/*"],
			"pages/*": ["./app/pages/*"],
			"containers/*": ["./app/containers/*"],
			"components/*": ["./app/components/*"],
			"constants/*": ["./app/constants/*"],
			"models/*": ["./app/models/*"],
			"hooks/*": ["./app/hooks/*"],
			"helper/*": ["./app/helper/*"],
			"store/": ["./app/store/"],
			"guards/*": ["./app/guards/*"],
			"assets/*": ["./app/assets/*"],
			"services/*": ["./app/services/*"],
			"data/*": ["./app/data/*"],
		}
	}
}
